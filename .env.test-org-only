# Test scenario: Organization-only sync (no team specified)
# This tests the action when syncing all organization members to a cost center

# GitHub Configuration
GITHUB_TOKEN=ghp_your_token_here
GITHUB_ORGANIZATION=copilot-chargeback-test
# GITHUB_TEAM=  # Intentionally left empty to test org-only sync
GITHUB_COST_CENTER_NAME=org-wide-cost-center

# Cost Center API Configuration
COST_CENTER_API_BASE_URL=http://localhost:3001

# GitHub Actions Configuration
INPUT_GITHUB_ORGANIZATION=copilot-chargeback-test
# INPUT_GITHUB_TEAM=  # Intentionally left empty
INPUT_GITHUB_COST_CENTER_NAME=org-wide-cost-center

# Debug settings
ACTIONS_STEP_DEBUG=true

# Standard GitHub Actions environment variables
CI=true
GITHUB_ACTION=copilot-chargeback-org-test
GITHUB_ACTOR=test-actor
GITHUB_REPOSITORY=ewega/copilot-chargeback
GITHUB_WORKFLOW=test-org-only-sync
GITHUB_EVENT_NAME=push
GITHUB_REF=refs/heads/main
GITHUB_SHA=test-sha-org-only
GITHUB_WORKSPACE=/tmp